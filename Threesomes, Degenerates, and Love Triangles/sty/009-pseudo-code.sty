\numberwithin{algobject}{chapter}

\newcommand\makealg[0]{
  \newpage\cleardoublepage\phantomsection
  \addcontentsline{toc}{chapter}{\listalgobjectname}
  \listofalgobjects
}


\newcommand\inputalgorithm[4][]{%
  \begin{algobject}[#1]
  \caption{#2}
  \label{#3}
  \begin{algorithm}[#1]
  \caption{#2}
  \input{#4}
  \end{algorithm}
  \end{algobject}
}

